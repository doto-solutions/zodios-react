{
  // ts config for es 2021
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2019", "es2021", "dom"],
    "outDir": "./lib",
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "lib", "coverage"]
}
